{{#partial "content"}}
    {{#if editSquad}}
        <h1>Edit squad details</h1>
        <form action="/squads/{{squad.id}}" method="post">
            <label for="name">Edit squad name</label>
            <input id="newSquadName" name="newSquadName" type="text" value="{{squad.name}}">
            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Squad</h1>
        <form action="/squads" method="post">
            <label for="name">Squad Name</label>
            <input id="name" name="name" type="text">
            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}