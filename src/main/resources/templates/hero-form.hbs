{{#partial "content"}}

    {{#if editHero}}
        <h1>Edit Hero Details</h1>
        <form action="/heroes/{{hero.id}}" method="post">
            <br>
            <label for="name">Edit hero's name</label>
            <input id="name" name="name" type="text" value="{{hero.name}}">
            <br>
            <label for="age">Hero Age</label>
            <input id="age" name="age" type="text" value="{{hero.age}}">
            <br>
            <label for="specialPower">Hero Special Power</label>
            <input id="specialPower" name="specialPower" type="text" value="{{hero.specialPower}}">
            <br>
            <label for="weakness">Hero Weakness</label>
            <input id="weakness" name="weakness" type="text" value="{{hero.weakness}}">
            <br>
            <label for="squadId">Update hero's squad:</label>
            <select id="squadId" name="squadId">
                {{#each squads}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Add a new Squad for the hero?<a href="/squads/new">Click Here</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h2>Add Hero</h2>

        <form action="/heroes" method="post">
            {{#if squads}}
                <label for="name">Hero Name</label>
                <input id="name" name="name" type="text">

                <label for="age">Hero Age</label>
                <input id="age" name="age" type="text">

                <label for="specialPower">Hero Special Power</label>
                <input id="specialPower" name="specialPower" type="text">

                <label for="weakness">Hero Weakness</label>
                <input id="weakness" name="weakness" type="text">

                <label for="squadId">Select The Squad for the Hero:</label>
                <select id="squadId" name="squadId">
                    {{#each squads}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>

                <p>Add a new Squad for the hero?<a href="/squads/new">Click Here</a></p>
            {{else}}
                <h3> Every hero must belong to a squad. <a href="/squads/new">Add one here.</a></h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}